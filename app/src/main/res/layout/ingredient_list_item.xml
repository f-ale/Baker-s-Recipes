<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ingredient_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:textSize="18sp"
        tools:text="Farina W260"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/tv_ingredient_list_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/btn_edit_ingredient_list"
        android:layout_alignWithParentIfMissing="true"
        android:textSize="18sp"
        tools:text="100%"
        android:padding="6dp"/>

    <ImageButton
        android:id="@+id/btn_edit_ingredient_list"
        android:layout_width="28dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        app:srcCompat="@drawable/ic_action_edit_dark"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>