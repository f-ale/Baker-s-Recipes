<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ingredient_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_ingredient_list_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Farina W260" />

    <TextView
        android:id="@+id/tv_ingredient_list_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/btn_edit_ingredient_list"
        android:padding="6dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_ingredient_list"
        app:layout_constraintTop_toTopOf="@+id/tv_ingredient_list_name"
        tools:text="100%" />

    <ImageButton
        android:id="@+id/btn_edit_ingredient_list"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="28dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/edit_ingredient_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ingredient_list_name"
        app:srcCompat="@drawable/ic_action_edit_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>